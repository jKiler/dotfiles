[core]
	pager = delta
[alias]
	br = branch
	c = commit
	ca = commit --amend
	can = commit --amend --no-edit
	cm = commit -m
	co = checkout
	develop = checkout develop
	l = log --oneline -20
	ll = "log --date=human --format='%C(auto)%h%d%n%Cblue[%<(20,trunc)%an]%Creset %Cgreen[%<(12,trunc)%ar]%Creset %<(130,trunc)%s'"
	ra = rebase --abort
	rc = rebase --continue
	rhu = reset --hard @{u}
	ri = rebase -i
	rih = "!f() { git rebase -i HEAD~$1; }; f"
	sm = stash push -m
	st = status
[delta]
	line-numbers = true
[diff]
	colorMoved = default
[rerere]
	enabled = true
[includeIf "gitdir:~/code/personal/"]
	path = personal.inc
[includeIf "gitdir:~/code/work/"]
	path = work.inc
